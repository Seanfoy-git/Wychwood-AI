---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('insights'))
  .filter(p => !p.data.draft)
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
---

<BaseLayout title="Insights — Wychwood Partners" description="Frameworks and practical insights on scaling execution discipline.">
  <main class="mx-auto max-w-6xl px-6 py-14">
    <h1 class="text-4xl font-semibold tracking-tight">Insights</h1>
    <p class="mt-4 max-w-2xl text-slate-600">
      Short, structured thinking on scaling operations, forecasting, and leadership cadence.
    </p>

    <div class="mt-10 grid grid-cols-1 gap-6 md:grid-cols-2">
      {posts.map((post) => (
        <a href={`/insights/${post.slug}/`} class="group rounded-2xl border bg-white p-6 shadow-sm hover:shadow-md">
          <p class="text-xs font-medium text-slate-500">
            {post.data.publishDate.toLocaleDateString('en-GB', { year: 'numeric', month: 'short', day: 'numeric' })}
          </p>
          <p class="mt-2 text-lg font-semibold">{post.data.title}</p>
          <p class="mt-2 text-sm text-slate-600">{post.data.description}</p>
          <p class="mt-4 text-sm font-medium text-slate-900 group-hover:underline">Read →</p>
        </a>
      ))}
    </div>
  </main>
</BaseLayout>
